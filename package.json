{
  "name": "ethereumjs-wallet",
  "version": "0.6.0",
  "description": "Utilities for handling Ethereum keys",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "coverage": "istanbul cover _mocha",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "lint": "standard",
    "prepublishOnly": "npm run lint && npm run test:build",
    "test": "mocha ./test/*.js",
    "test:build": "npm run build:dist && mocha ./dist/test/*.js",
    "build:dist": "babel *.js test/*.js -d dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereumjs/ethereumjs-wallet.git"
  },
  "keywords": [
    "ethereum",
    "wallets",
    "keys"
  ],
  "author": "Alex Beregszaszi <alex@rtfs.hu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ethereumjs/ethereumjs-wallet/issues"
  },
  "homepage": "https://github.com/ethereumjs/ethereumjs-wallet",
  "dependencies": {
    "aes-js": "^3.1.0",
    "bs58check": "^2.1.1",
    "crypto-browserify": "^3.12.0",
    "ethereumjs-util": "^5.1.4",
    "hdkey": "^0.8.0",
    "safe-buffer": "^5.1.1",
    "scrypt.js": "^0.2.0",
    "utf8": "^3.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "standard": "^10.0.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "ignore": [
      "dist/**"
    ]
  }
}
